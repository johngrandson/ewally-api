{
  "openapi": "3.0.1",
  "info": {
    "title": "Ewally API",
    "version": "1.0.0",
    "description": "Rotas dos endpoints",
    "contact": {
      "email": "jgrandson.dev@gmail.com",
      "name": "João Netto"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/"
    }
  ],
  "tags": [
    {
      "name": "boleto",
      "description": "API de Boletos"
    }
  ],
  "paths": {
    "/boleto/:id": {
      "get": {
        "tags": [
          "boleto"
        ],
        "summary": "Lista um boleto à partir do seu id no banco de dados",
        "operationId": "boleto-get-by-id",
        "responses": {
          "200": {
            "description": "Resultado da busca",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "books": {
                      "type": "object",
                      "items": {
                        "$ref": "#/components/schemas/BoletoSchema"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DraftBoletoSchema": {
        "type": "object",
        "properties": {
          "barCode": {
            "type": "string",
            "example": "21299758700000020000001121100012100447561740"
          },
          "amount": {
            "type": "string",
            "example": "20.00"
          },
          "expirationDate": {
            "type": "string",
            "example": "15-03-2020"
          }
        }
      },
      "BoletoSchema": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DraftBoletoSchema"
          }
        ],
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "5d7224d3b40b1a1a046697dd"
          }
        }
      }
    }
  }
}